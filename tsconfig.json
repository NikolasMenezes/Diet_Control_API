{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@modules/*": [
        "./src/modules/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@common/*": [
        "./src/common/*"
      ]
    },
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}